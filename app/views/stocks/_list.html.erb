<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<td>Symbol</th>
			<th>Current price</th>
		
			<% if @user.id == current_user.id%>
				<th>Actions</th>
			<%end%>
		</tr>
	</thead>
	<tbody>
		<% @user_stocks.each do |user_stock| %>
			<tr>
				<td><%= user_stock.name%></td>
				<td><%= user_stock.ticker%></td>
				<td><%= user_stock.last_price%></td>
				<% if @user.id == current_user.id%>
					<td><%= link_to "Delete this stock", "/user_stocks/#{user_stock.id}", method: :delete, 
								data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs"%></td>
				<%end%>
			</tr>
		<%end%> 
	</tbody> 
	

</table>